<% include partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Airlines Lounge!</h1>
            <p>View all the airlines from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/airlines/new">Add a New Airline</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        
        <% airlines.forEach(function(airline){ %>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="thumbnail">
                    <img src="<%= airline.image %>">
                    <div class="caption">
                        <h4><%= airline.name %></h4>
                    </div>
                    <p>
                        <a href="/airlines/<%= airline._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>

    </div>
</div>

<% include partials/footer %>